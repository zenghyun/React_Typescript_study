{
  "compilerOptions": {
    "outDir": "./build/",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES5",
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}